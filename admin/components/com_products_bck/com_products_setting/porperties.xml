<root>
    
    <fields>
        
        
        <title name="title"  type="text"  title="Title"  />
           
        
        
        <site  
   
            name="site" 
            type="select" 
            select_type='DB' 
            select_data="com_cities_categories"
            select_text='title' 
            select_value='id'  
            title="Region"
           
            
            pclass='_50'/>
  
              
        
        <PaymentType name="PaymentType"  type="select" title="Payment Type" select_data="1>>Paypal;2>>2Checkout;3>>AAIB;4>>Cash On Delivery;" pclass='_50' />
        
        
        
       
        <coupon name="coupon"  type="enable" title="enable coupon" pclass='_50' />
        <shipping name="shipping"  type="enable" title="enable shipping" pclass='_50' />
        <freeGift name="freeGift"  type="enable" title="enable free Gift" pclass='_50' />
             
        
        <enabled name="enabled"  type="enable" title="enable" pclass='_50' />
        
        
        <ordermails name="ordermails"  type="textarea" title="Copy Order emails to:" comment="To write multiple email addreses seperate them by semicolon;[m1;m2;m3;] "  />
          
        <mailtemplate 
            name="mailtemplate" 
            type="select" 
            select_type='DB' 
            select_data="com_mailsTemplates"
            select_text='title' 
            select_value='id'
            title="email template:" 
            comment="mailtemplate "
        />
      
     

        <line1 name="line1"  type="line" />
        
        <requstcartFields name="requstcartFields"  type="fields" title="requst cart Fields" />
       
        <line2 name="line2"  type="line" />
     
        
        
    

    </fields>
    



    
    

 
    <group>
        <com_products_order title="Order"  />
        <com_products title="Products" parent="yes" />
        <com_products_price title=" Price"  />
        <com_products_categories title="Categories "  />
        <plg_shipping title="Shipping"  />
        <plg_shipper title="Shipper"  />
        <plg_coupon title="Create Coupon"  />
        <plg_shipping_setting title="Shipping Setting"  />
        <com_products_setting title=" Setting"  />
        <com_order_status title="Order Status"  />
    </group>
   
       
    <listfields> 
        
          
        <title />
        <site />
        
        
        <enabled />
        
    </listfields>
    
    

</root>


    

